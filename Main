package trabalho3;

import javax.swing.JFrame;
import java.awt.*;
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*Color_select colorPanel = new Color_select();
		colorPanel.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		colorPanel.setSize(720, 480);
		colorPanel.setVisible(true);
*/
		JFrame frame = new JFrame("Calculadora");
		GridLayout layout = new GridLayout(2, 1);
		frame.setLayout(layout);
		
		Calculadora_txt calcf = new Calculadora_txt();
		Calculadora_ly calculadora = new Calculadora_ly(calcf);
		calculadora.setVisible(true);
		calcf.setVisible(true);

		frame.add(calcf);
		frame.add(calculadora);
		
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		frame.setSize(720, 360);
	}

}
